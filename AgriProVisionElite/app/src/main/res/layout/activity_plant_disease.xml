<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comman.PlantDisease"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/reli"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:background="#9CF65F9C"
        android:elevation="2dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="TAKE ACTION"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"

            >


            <ImageButton
                android:id="@+id/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/cam1" />


        </LinearLayout>
    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:background="@color/white">


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/demoArrow"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:rotation="-20"
                android:visibility="gone"
                app:tint="@color/black" />


        </LinearLayout>

        <TextView
            android:id="@+id/clssified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="374dp"
            android:includeFontPadding="false"
            android:text="Your Plant  has  "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/click_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"

            android:layout_marginBottom="292dp"
            android:letterSpacing="0.06"
            android:text="click upper the result to know more.... "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="377dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="329dp"
            android:clickable="true"
            android:focusable="true"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="fitCenter"
            android:src="@drawable/scan2" />

        <TextView
            android:id="@+id/demoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="257dp"
            android:justificationMode="inter_word"

            android:lineSpacingMultiplier="0.9"
            android:text="first import your image using camera"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
            tools:targetApi="O" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="111dp"
            android:layout_height="76dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="274dp"
            android:layout_marginBottom="170dp"
            android:cropToPadding="true"
            android:rotation="8"
            android:rotationX="33"
            android:rotationY="-12"
            app:srcCompat="@drawable/curli" />


    </RelativeLayout>






</RelativeLayout>